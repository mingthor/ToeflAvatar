<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sequoiabridge.captain.toeflavatar" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".QuestionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionDetailActivity"
            android:label="@string/title_question_detail"
            android:parentActivityName=".QuestionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".QuestionListActivity" />
        </activity>
        <activity
            android:name=".PracticeActivity"
            android:label="@string/title_activity_practice"
            android:parentActivityName=".QuestionDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sequoiabridge.captain.toeflavatar.QuestionDetailActivity" />
        </activity>
    </application>

</manifest>
